@{
    ViewData["Title"] = "Error";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa; /* Light gray background */
            color: #343a40; /* Dark gray text color */
            margin: 0;
            padding: 0;
        }

        .error-container {
            text-align: center;
            margin: 50px;
        }

        .card {
            display: inline-block;
            background-color: #ffffff; /* White background for the card */
            border: 1px solid #dee2e6; /* Light gray border */
            border-radius: 8px; /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
            padding: 20px;
            max-width: 600px;
            width: 100%;
            margin: 0 auto;
        }

        .error-title {
            color: #dc3545; /* Red color for error messages */
            font-size: 2.5rem;
            font-weight: bold;
            margin-top: 0;
        }

        .error-subtitle {
            color: #dc3545;
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        .error-description {
            color: #495057; /* Slightly lighter gray for text */
            font-size: 1rem;
            margin-bottom: 20px;
            line-height: 1.6;
        }

        .warning {
            color: #ffc107; /* Yellow color for warnings */
            font-weight: bold;
        }

        .info {
            color: #17a2b8; /* Teal color for informational text */
            font-style: italic;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <div class="card">
            <h1 class="error-title">Error.</h1>
            <h2 class="error-subtitle">An error occurred while processing your request.</h2>

            <!-- Display the dynamic error message -->
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <p class="error-description"><h5>@ViewBag.ErrorMessage</h5></p>
            }

            
            
        </div>
    </div>
</body>
</html>
