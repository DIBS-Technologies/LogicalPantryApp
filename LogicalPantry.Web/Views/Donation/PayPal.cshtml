<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donation Form</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .donation-container {
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .form-label {
            font-weight: bold;
        }
        #pay-button {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container donation-container">
        <h2 class="text-center mb-4">Donate to Our Cause</h2>
        <form id="donation-form">
            <div class="form-group">
                <label for="amount" class="form-label">Enter amount to donate:</label>
                <input type="number" id="amount" name="amount" class="form-control" step="0.01" min="0" required />
            </div>
            <button type="button" id="pay-button" class="btn btn-primary btn-block">Pay with PayPal</button>
        </form>
        <div id="paypal-buttons-container" class="mt-4"></div>
    </div>

    <!-- PayPal Script -->
    <script src="https://www.paypal.com/sdk/js?client-id=YOUR_PAYPAL_CLIENT_ID"></script>
    <script>
        // Render PayPal Buttons
        paypal.Buttons({
            createOrder: async function(data, actions) {
                const amount = document.getElementById('amount').value;
                if (!amount || amount <= 0) {
                    alert('Please enter a valid amount.');
                    return;
                }

                const response = await fetch("/my-server/create-paypal-order", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({
                        amount: amount
                    })
                });

                const order = await response.json();
                return order.id;
            },
            onApprove: async function(data, actions) {
                return actions.order.capture().then(function(details) {
                    alert('Transaction completed by ' + details.payer.name.given_name);
                });
            },
            onCancel: function(data) {
                alert('Transaction was cancelled');
            },
            onError: function(err) {
                console.error(err);
                alert('An error occurred during the transaction');
            }
        }).render('#paypal-buttons-container');
    </script>
</body>
</html>
