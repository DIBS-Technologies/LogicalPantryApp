    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                paging: true,
                responsive: true,
                lengthChange: false,
                searching: false,
                columnDefs: [
                    { targets: '_all', className: 'text-left' }
                   
                ]
            });
        });

        $(".inp-cbx").each(function () {
            var isDisabled = $(this).prop("disabled");

            if (isDisabled) {
                $(this).closest('td').find('.cbx').addClass("check-disabled");
            } else {
                $(this).closest('td').find('.cbx').removeClass("check-disabled");
            }
        });
            });

        $('.dt-buttons').addClass('float-end');

        hideMessages();

        function hideMessages() {
            setTimeout(function () {
                $('#successMessageUser').fadeOut('slow');
                $('#errorMessageUser').fadeOut('slow');
            }, 5000); // 10 seconds delay (10000 milliseconds)
        }


        function deleteUser(userId) {
            Swal.fire({
                title: 'Delete User',
                text: 'Are you sure you want to delete this user? User paymets also deleted.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Delete'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/User/DeleteUser/' + userId;
                }
            });
        }
    </script>
