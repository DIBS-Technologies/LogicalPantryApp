@model LogicalPantry.DTOs.TimeSlotSignupDtos.TimeSlotSignupViewModel

@{
    ViewData["Title"] = "Manage Time Slot Signups";
}

<h2>@ViewData["Title"]</h2>

<!-- Display TempData Message -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<!-- Search Form -->
<form method="get" asp-action="ManageTimeSlotSignups">
    <div class="form-group row">
        <label for="startDateTime" class="col-sm-2 col-form-label">Start DateTime:</label>
        <div class="col-sm-4">
            <input type="datetime-local" id="startDateTime" name="startDateTime" class="form-control" value="@Model.StartDateTime?.ToString("yyyy-MM-ddTHH:mm")" required />
        </div>
    </div>
    <div class="form-group row">
        <label for="endDateTime" class="col-sm-2 col-form-label">End DateTime:</label>
        <div class="col-sm-4">
            <input type="datetime-local" id="endDateTime" name="endDateTime" class="form-control" value="@Model.EndDateTime?.ToString("yyyy-MM-ddTHH:mm")" required />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

<!-- Display User Details with Checkboxes -->
@if (Model.Users != null && Model.Users.Any())
{
    <form asp-action="SaveTimeSlotSignups" method="post">
        <input type="hidden" name="startDateTime" value="@Model.StartDateTime?.ToString("o")" />
        <input type="hidden" name="endDateTime" value="@Model.EndDateTime?.ToString("o")" />
        <table class="table">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Time Slot ID</th>
                    <th>Attendance</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    var signup = Model.TimeSlotSignups.FirstOrDefault(ts => ts.UserId == user.Id);
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>
                            <input type="text" name="signups[@user.Id].TimeSlotId" value="@signup?.TimeSlotId ?? 0" class="form-control" />
                        </td>
                        <td>
                            <input type="hidden" name="signups[@user.Id].Email" value="@user.Email" />
                            <input type="checkbox" name="signups[@user.Id].Attended" @(signup?.Attended == true ? "checked" : "") />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
}
else if (Model.StartDateTime != null && Model.EndDateTime != null)
{
    <p>No users found for the selected time range.</p>
}
