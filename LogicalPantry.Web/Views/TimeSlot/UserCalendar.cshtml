            function showMessage(message, isError) {
                var modalTitle = isError ? 'Error' : 'Success';
                var modalClass = isError ? 'error' : 'success';

                Swal.fire({
                    title: modalTitle,
                    text: message,
                    icon: modalClass,
                    timer: 2000, // Auto-close after 2 seconds
                    showConfirmButton: false, // No need for a Close button
                    customClass: {
                        container: 'swal-container',
                        popup: 'swal-popup',
                        title: 'swal-title',
                        content: 'swal-content'
                    },
                    didClose: function () {
                        // Restore the scroll behavior after the modal is hidden
                        $('body').css({
                            'overflow-y': 'auto',
                            'overflow-x': 'hidden'
                        });
                    }
                });

                // Prevent horizontal scroll bar
                $('body').css({
                    'overflow-y': 'auto',
