<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tenant Information</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .card {
            width: 100%;
            max-width: 800px; /* Increase card width for larger screens */
            margin: auto;
        }

        .card-header {
            text-align: center;
            font-weight: 500;
            font-size: 22px;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
        }

        .form-group .form-control {
            width: 100%;
        }

        @@media (min-width: 992px) {
            .form-group {
                display: flex;
                align-items: center;
            }

            .form-group label {
                flex: 0 0 150px;
                max-width: 150px;
                margin-bottom: 0;
            }

            .form-group .form-control {
                flex: 1 1 auto;
            }
        }

        .saveButton {
            background-color: #1A2A52;
            color: white;
            border-radius: 5px;
            border: none;
            font-size: 1rem;
            padding: 0.5rem 2rem;
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12">
                <div class="card mb-4">
                    <div class="card-header">
                        Information
                    </div>
                    <div class="card-body">
                        <form method="post" id="createUser" action="/Tenant/EditTenant" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="logo">Logo<span class="mandatory">*</span></label>
                                <input type="file" name="LogoFile" class="form-control-file" id="logo" />
                                <span class="text-danger" id="logo-error"></span>
                            </div>
                            <div class="form-group">
                                <label for="name">Name<span class="mandatory">*</span></label>
                                <input name="TenantName" class="form-control" id="name" />
                                <span class="text-danger" id="name-error"></span>
                            </div>
                            <div class="form-group">
                                <label for="email">Email<span class="mandatory">*</span></label>
                                <input type="email" name="AdminEmail" class="form-control" id="email" />
                                <span class="text-danger" id="email-error"></span>
                            </div>
                            <div class="form-group">
                                <label for="paypalId">Paypal ID<span class="mandatory">*</span></label>
                                <input type="email" name="PaypalId" class="form-control" id="paypalId" />
                                <span class="text-danger" id="paypalId-error"></span>
                            </div>
                            <div class="form-group">
                                <label for="timeZone">Time Zone<span class="mandatory">*</span></label>
                                <select name="Timezone" class="form-control" id="timeZone"></select>
                                <span class="text-danger" id="timeZone-error"></span>
                            </div>
                            <div>
                                <button class="saveButton" type="submit" onclick="return validateForm();">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment-timezone/0.5.34/moment-timezone-with-data.min.js"></script><script src="~/js/timezones.full.js"></script>
<script src="~/js/timezones.full.min.js"></script>
<script src="~/js/timezones.js"></script>
<script src="~/js/timezones.min.js"></script>
    <script>
        $(document).ready(function () {
            populateTimeZones();

            $('#logo, #name, #email, #paypalId, #timeZone').on('blur change keyup', function() {
                validateForm();
            });
        });

        function populateTimeZones() {
            var timezones = moment.tz.names();
            var $timeZoneSelect = $('#timeZone');
            $.each(timezones, function(index, timezone) {
                $timeZoneSelect.append($('<option>', { value: timezone, text: timezone }));
            });
        }

        function validateForm() {
            var isValid = true;

            var logo = $("#logo").val();
            if (logo.trim() === "") {
                $("#logo-error").text("Logo is required.").show();
                isValid = false;
            } else {
                $("#logo-error").text("").hide();
            }

            var name = $("#name").val();
            if (name.trim() === "") {
                $("#name-error").text("Name is required.").show();
                isValid = false;
            } else {
                $("#name-error").text("").hide();
            }

            var email = $("#email").val();
            if (email.trim() === "") {
                $("#email-error").text("Email is required.").show();
                isValid = false;
            } else if (!isValidEmail(email)) {
                $("#email-error").text("Invalid Email format.").show();
                isValid = false;
            } else {
                $("#email-error").text("").hide();
            }

            var paypalId = $("#paypalId").val();
            if (paypalId.trim() === "") {
                $("#paypalId-error").text("Paypal ID is required.").show();
                isValid = false;
            } else if (!isValidEmail(paypalId)) {
                $("#paypalId-error").text("Invalid Paypal ID format.").show();
                isValid = false;
            } else {
                $("#paypalId-error").text("").hide();
            }

            var timeZone = $("#timeZone").val();
            if (timeZone.trim() === "") {
                $("#timeZone-error").text("Time Zone is required.").show();
                isValid = false;
            } else {
                $("#timeZone-error").text("").hide();
            }

            $(".saveButton").prop("disabled", !isValid);
            return isValid;
        }

        function isValidEmail(email) {
            var emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            return emailRegex.test(email);
        }
    </script>
</body>
</html>
