
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5 ">
<div class="d-flex justify-content-center mb-5">
<div class="w-50">
            @if (User.Identity.IsAuthenticated)
            {
    <div class="card text-center">
    <div class="card-body">
    <h3 class="card-title">Welcome, @User.Identity.Name!</h3>
    <form asp-controller="Auth" asp-action="Logout" method="post">
    <button class="btn btn-primary" type="submit">Logout</button>
    </form>
    </div>
    </div>
            }
            else
            {
    <div class="card text-center">
    <div class="card-body">
    <h3 class="card-title">Welcome to the application!</h3>
    <p class="card-text">Please log in to access the features.</p>
    </div>
    </div>
            }
</div>

    </div>
<div class="container">
<div class="text-center">
<img src="~/image/Demo.jpeg" alt="A beautiful demo image" class="img-fluid" style="max-width: 100%;">
</div>
</div>
</div>
